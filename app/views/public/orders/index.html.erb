<%= render "public/shared/header" %>


<div class="container">

    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        <h3 class="bg-secondary text-white text-center">
          注文履歴一覧
        </h3>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
    </div>


    <div class="col-ml-3">
      <table class="table table-bordered">
        <thead class="thead-light m-4">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>


          <tbody>
          <% @orders.each do |order|  %>
            <tr>
              <td><%= l order.created_at %></td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
            <td>
              <% order.order_details.each do |order_detail|  %>
                <ul>
                  <li>
                    <%= order_detail.item.name %>
                  </li>
                </ul>
              <% end %>
            </td>

            <td><%= order.total_payment.to_s(:delimited) %></td>
            <td></td>
            <td><%= link_to order_path(order.id), class: "btn btn-primary" do %>表示する<% end %></td>
            </tr>
          </tbody>
          <% end %>
      </table>
    </div>
</div>
