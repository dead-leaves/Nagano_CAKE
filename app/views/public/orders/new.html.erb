<%= render "public/shared/header" %>


<div class="container">

    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto">
        <h3 class="bg-secondary text-white text-center">
          注文情報入力
        </h3>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto"></div>
    </div>

    <%= form_with model: @order, url: '/orders/confirm', method: :post do |f| %>


    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto">
        <div class="font-weight-bold">支払方法</div>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-11 px-6 px-sm-0 mx-auto"></div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
    </div>




    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto">
        <div class="font-weight-bold">お届け先</div>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-11 px-6 px-sm-0 mx-auto"></div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.radio_button :select_address, 1, checked: true %>
        <%= f.label :select_address, "ご自身の住所"  %><br>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
        <%= current_customer.last_name + current_customer.first_name %><br>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.radio_button :select_address, 2 %>
        <%= f.label :select_address, "登録済住所から選択"  %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), class: "mb-3", prompt: "--選択してください--" %>
      </div>
    </div>









    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.radio_button :select_address, 3 %>
        <%= f.label :select_address, "新しいお届け先"  %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
    </div>




    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto">
        郵便番号(ハイフンなし)
      </div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.text_field :postal_code, size: 20, class: "mb-3", placeholder: "000000" %>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto">
        住所
      </div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
         <%= f.text_field :address, class: "mb-3", placeholder: "東京都渋谷区代々木神園町0-0", size: "54x20" %>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto">
        宛名
      </div>
      <div class="col-sm-12 col-md-8 col-lg-10 px-6 px-sm-0 mx-auto">
        <%= f.text_field :name, size: 20,  class: "mb-4", placeholder: "令和道子" %>
      </div>
    </div>

    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-12 px-6 px-sm-0 mx-auto">
        <div class="d-flex justify-content-center"><%= f.submit "確認画面へ進む", class: "btn btn-primary" %></div>
     </div>
    </div>
  <% end %>
</div>
