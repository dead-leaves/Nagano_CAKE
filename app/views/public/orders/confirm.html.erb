<%= render "public/shared/header" %>



<div class="container">

    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto">
        <h3 class="bg-secondary text-white text-center">
          注文情報確認
        </h3>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto"></div>
    </div>


    <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-light m-4">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>


        <% @total = 0 %>
        <% @cart_items.each do |cart_item|  %>
           <% @total = @total += cart_item.subtotal %>
          <tbody>
            <tr>
              <td><%= image_tag cart_item.item.get_image(100,100), class: "img-thumbnail" %> <%= cart_item.item.name %></td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td><%=  cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
          </tbody>
            <% end %>
      </table>
    </div>


    <div class="col-3">
       <table class="table table-bordered">
        <thead class="thead-light">
         <tr>
          <th>送料</th>
          <% @order.shipping_cost = 800 %>
          <td><%= @order.shipping_cost %></td>
         </tr>
         <tr>
          <th>商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
         </tr>
         <tr>
          <th>請求金額</th>
          <% @order.total_payment = @total+@order.shipping_cost %>
          <td>
            <%= @order.total_payment.to_s(:delimited) %>
          </td>
         </tr>
        </thead>
       </table>
      </div>
      <div class="col-1"></div>
     </div>


    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto">
        <div class="font-weight-bold">支払方法</div>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-11 px-6 px-sm-0 mx-auto">
        <%= @order.payment_method_i18n %>
      </div>
    </div>

    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto">
        <div class="font-weight-bold">お届け先</div>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-11 px-6 px-sm-0 mx-auto">
        〒<%= @order.postal_code %> <%= @order.address %><br>
        <%= @order.name %>
      </div>
    </div>


    <%= form_with model: @order, url: orders_path, method: :post do |f| %>


        <%= f.hidden_field :customer_id %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :shipping_cost %>
        <%= f.hidden_field :total_payment %>
        <%= f.hidden_field :status %>

    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-12 px-6 px-sm-0 mx-auto">
        <div class="d-flex justify-content-center"><%= f.submit "注文を確定する", class: "btn btn-success" %></div>
      </div>
    </div>
      <% end %>
</div>