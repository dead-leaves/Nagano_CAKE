<%= render "public/shared/header" %>
<h1>ショッピングカート</h1>
<div class="col-5 ml-3">
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= @cart_items.each do |cart_item|  %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%=  %></td>
        <td><%=  cart_item.subtotal %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>
