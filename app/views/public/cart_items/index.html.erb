<%= render "public/shared/header" %>

<div class="col-5 ml-3">
  <table class="table">
    <thead>
      <h3>ショッピングカート</h3>

      <%= link_to cart_items_destroy_all_path, method: :delete,  class: "btn btn-danger" do %>カートを空にする<% end %>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>

    </thead>


    <% @cart_items.each do |cart_item|  %>
       <% @total = @total += cart_item.subtotal %>
      <tbody>
        <tr>
          <td><%= image_tag cart_item.i.get_image(100,100) %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>

          <td>
            <%= form_with model: @cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.number_field :amount, value: cart_item.amount,  min: 1, max: 10 %>
            <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>

          <td><%=  cart_item.subtotal.to_s(:delimited) %></td>
          <td><%=  link_to cart_item_path(cart_item.id), method: :delete,  class: "btn btn-danger" do %>削除する<% end %></td>
        </tr>
      </tbody>
    <% end %>
      <tbody>
         <tr>
          <td><%= link_to root_path, class: "btn btn-primary" do %>買い物を続ける<% end %></td>
          <td></td>
          <td></td>
          <td>合計金額</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
<% if @cart_items.empty? %>
    <% else %>
          <td>
              <%= link_to new_order_path, class: "btn btn-success" do %>情報入力に進む<% end %>
          </td>
<% end %>
          <td></td>
          <td></td>
        </tr>
      </tbody>

  </table>
</div>
