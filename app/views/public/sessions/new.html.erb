<%= render "public/shared/header" %>

<div class="container">

    <div class="row m-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        <h3 class="bg-secondary text-white text-center">
          ログイン
        </h3>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
    </div>


    <div class="row m-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        <h6 class="bg-secondary text-white text-center">
          会員の方はこちらからログイン
        </h6>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
    </div>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto">
        <%= f.email_field :email, autofocus: true, size: 40, placeholder: "sample@example.com", autocomplete: "email" %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-7 px-6 px-sm-0 mx-auto"></div>
    </div>



    <div class="row mb-5">
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto">
        <%= f.label "パスワード", class: "ml-4" %>
      </div>
       <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto">
        <%= f.password_field :password, autocomplete: "current-password", size: 40, class: "ml-2" %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-7 px-6 px-sm-0 mx-auto"></div>
    </div>


     <div class="row m-4">
      <div class="text-center col-sm-12 col-md-8 col-lg-12 px-6 px-sm-0 mx-auto">
         <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
    </div>



    <div class="row m-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        <h6 class="bg-secondary text-white text-center">
          会員登録がお済みでない方
        </h6>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto"></div>
    </div>

    <div class="row m-3">
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-6 px-6 px-sm-0 mx-auto">
        <i class="fa-solid fa-share-from-square"></i><%= render "public/shared/links" %>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto"></div>
    </div>

    <% end %>
</div>

