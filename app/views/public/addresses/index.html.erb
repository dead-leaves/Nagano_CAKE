<%= render "public/shared/header" %>

<h3 class="my-3 ml-3">配送先登録/一覧</h3>

<%= form_with model: @address do |f| %>

 <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "000000" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

   <div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :name, placeholder: "令和道子" %>
  </div>

   <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

  <% end %>



<div class="col-5 ml-3">
  <table class="table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to '編集する', edit_address_path(address.id) %>|<%= link_to '削除する', address_path(address.id), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>


