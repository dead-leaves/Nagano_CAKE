<%= render "public/shared/header" %>
<h1>配送先編集</h1>

<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

<div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "000000" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

   <div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :name, placeholder: "令和道子" %>
  </div>

   <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>

  <% end %>