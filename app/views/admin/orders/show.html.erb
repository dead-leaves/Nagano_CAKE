<%= render "admin/shared/header" %>


<div class="container">

    <div class="row m-4">
      <div class="col-sm-12 col-md-8 col-lg-4 px-6 px-sm-0 mx-auto">
        <h3 class="bg-secondary text-white text-center">
          注文履歴詳細
        </h3>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto"></div>
    </div>


    <div class="row mt-5">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        購入者
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto">
        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        注文日
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto">
        <%= l @order.created_at %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        配送先
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto">
        <%= @order.address_br %>
      </div>
    </div>

     <div class="row mt-1">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto">
        <%= @order.address_br_name %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        支払方法
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto">
        <%= @order.payment_method_i18n %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto">
        注文ステータス
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 px-6 px-sm-0 mx-auto"></div>
    </div>



    <div class="row mr-3">
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-3 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-2 px-6 px-sm-0 mx-auto">

      </div>
      <div class="col-sm-12 col-md-8 col-lg-1 px-6 px-sm-0 mx-auto"></div>
      <div class="col-sm-12 col-md-8 col-lg-5 px-6 px-sm-0 mx-auto"></div>
    </div>





  <div class="row m-3">
      <div class="col-7">
       <table class="table">
        <thead class="thead-light">
         <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
        </thead>

         <% @order_details.each do |order_detail| %>
         <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal.to_s(:delimited) %></td>
         </tr>
        <% end %>
       </table>
     </div>

     <div class="col-2"></div>

     <div class="col-3">
       <table class="table table-borderless">
        <thead>
         <tr>
          <th>商品合計</th>
          <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %>円</td>
         </tr>
         <tr>
          <th>送料</th>
          <td><% @order.shipping_cost = 800 %><%= @order.shipping_cost %>円</td>
         </tr>
         <tr>
          <th>請求金額</th>
          <td class="font-weight-bold"><%= @order.total_payment.to_s(:delimited) %>円</td>
         </tr>
        </thead>
       </table>
      </div>
   </div>
</div>