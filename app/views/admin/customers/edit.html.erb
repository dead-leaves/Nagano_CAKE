<%= render "admin/shared/header" %>


<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

<h4><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h4>


<%= @customer.id %><br>


<div class="form-group">
    <label for="customer_name">氏名</label>
      <%= f.text_field :last_name, placeholder: "性", size: "10x20" %>　<%= f.text_field :first_name, placeholder: "名", size: "10x20" %>
</div>

<div class="form-group">
    <label for="customer_name_kana">フリガナ</label>
      <%= f.text_field :last_name_kana, placeholder: "セイ", size: "10x20" %>　<%= f.text_field :first_name_kana, placeholder: "メイ", size: "10x20" %>
</div>


<div class="form-group">
    <label for="customer_postal_code">郵便番号</label>
      <%= f.text_field :postal_code, placeholder: "ハイフンなし" %>
</div>

</div>

<div class="form-group">
    <label for="customer_address">住所</label>
      <%= f.text_field :address, placeholder: "都道府県名市町村番地", size: "60x20" %>
</div>

<div class="form-group">
    <label for="customer_telephone_number">電話番号</label>
      <%= f.text_field :telephone_number, placeholder: "ハイフンなし" %>
</div>

<div class="form-group">
    <label for="customer_email">メールアドレス</label>
      <%= f.email_field :email, placeholder: "sample@example.com" %>
</div>


<div class="form-group">
    <label for="customer_status">会員ステータス</label>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "無効" %>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
</div>

<div class="form-group">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
</div>

<% end %>
