<%= render "admin/shared/header" %>


<h3 class="my-3 ml-3">商品一覧 <%= link_to new_admin_item_path do %><i class="fa-solid fa-circle-plus"></i><% end %></h3>

<div class="col-5 ml-3">
  <table class="table">
    <thead>
      <tr>
        <th>商品id</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %>円</td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>